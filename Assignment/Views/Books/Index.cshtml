@{ Layout = "../../Pages/Shared/_Layout.cshtml"; }

<h1>Books</h1>

<table class="table">
    <thead>
    <th>Title</th>
    <th>Publisher</th>
    <th>Published Date</th>
    <th>ISBN</th>
    <th>Price</th>
    <th>Author</th>
    <th>Genre</th>
    <th>Actions</th>
    </thead>
    <tbody>
        @foreach (var book in ViewBag.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Publisher</td>
                <td>@book.PublishedDate</td>
                <td>@book.ISBN</td>
                <td>@book.Price</td>
                <td>@book.Authors.Name</td>
                <td>@book.Genre</td>
                <td>
                    <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>