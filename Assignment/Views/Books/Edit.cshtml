@{ Layout = "../../Pages/Shared/_Layout.cshtml"; }


@model Assignment.Models.AddAuthorViewModel

<h1>Edit Book</h1>

<form method="post">
    <div>
        <input type="hidden" id="Id" name="Id" value="@ViewBag.Book.Id"/>

        <div class="d-flex justify-content-between gap-3">
            <div class="w-100">
                <label class="form-label">Title</label>
                <input class="form-control" type="text" name="Title" id="Title" value="@ViewBag.Book.Title" required />
            </div>

            <div class="w-100">
                <label class="form-label">Publisher</label>
                <input class="form-control" type="text" name="Publisher" value="@ViewBag.Book.Publisher" id="Publisher" />
            </div>
        </div>

        <div class="d-flex justify-content-between gap-3">
            <div class="w-100">
                <label class="form-label">Published Date</label>
                <input class="form-control" type="date" name="PublishedDate" value="@ViewBag.PublishedDate" id="PublishedDate" />
            </div>

            <div class="w-100">
                <label class="form-label">ISBN</label>
                <input class="form-control" type="text" name="ISBN" value="@ViewBag.Book.ISBN" id="ISBN" />
            </div>
        </div>

        <div class="d-flex justify-content-between gap-3">
            <div class="w-100">
                <label class="form-label">Price</label>
                <input class="form-control" type="number" name="Price" value="@ViewBag.Book.Price" id="Price" />
            </div>

            <div class="w-100">
                <label class="form-label">Author</label>
                <select class="form-select" name="AuthorId" id="AuthorId" required >
                    @foreach (var author in ViewBag.Authors)
                    {
                        <!option value="@author.Id" @(ViewBag.Book?.Authors.Id == author.Id ? "selected": "")>@author.Name</!option>
                    }
                </select>
            </div>
        </div>

        <div class="d-flex">
            <div class="w-50">
                <label class="form-label">Genre</label>
                <input class="form-control" type="text" name="Genre" id="Genre" value="@ViewBag.Book.Genre" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
